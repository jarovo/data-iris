#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
DH_VERBOSE = 1

LINUX_DIR_PATH = $(shell dpkg -L raspberrypi-kernel-headers | sed -n '/^\/lib\/modules\/.*-###RPI_ARCH###.*\/build$$/p'|head -1)
LINUX_DIR_PATH = $(shell dpkg -L ${PKG_KERNEL_HEADERS} | sed -n '/^\/lib\/modules\/.*\/build$/p')

%:
	dh $@

override_dh_auto_clean:
	dh_auto_clean -- LINUX_DIR_PATH="$(LINUX_DIR_PATH)"

override_dh_auto_build:
	dh_auto_build -- LINUX_DIR_PATH="$(LINUX_DIR_PATH)"
